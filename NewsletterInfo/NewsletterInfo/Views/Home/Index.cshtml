@using NewsletterInfo.ViewModels
@model List<NameVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var signup in Model)
            {
                <form action="/Home/MoreInfo/@signup.Id">
                    <div class="row mb-3">
                        <div class="col-2">
                            @signup.FirstName
                        </div>
                        <div class="col">
                            @signup.LastName
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-danger">
                                More Info
                            </button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>